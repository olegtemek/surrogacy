FROM node:18.18-alpine

WORKDIR /usr/src/app

COPY package*.json ./

RUN npm install

COPY . .


ARG DATABASE_URL
ARG SECRET
ARG FALLBACK_LANGUAGE
ARG TOKEN_BOT
ARG CHAT_ID
ENV DATABASE_URL=$DATABASE_URL
ENV SECRET=$SECRET
ENV FALLBACK_LANGUAGE=$FALLBACK_LANGUAGE
ENV TOKEN_BOT=$TOKEN_BOT
ENV CHAT_ID=$CHAT_ID

RUN npx prisma generate


RUN npm run build